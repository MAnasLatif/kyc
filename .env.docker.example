# Example Docker environment file
# Copy this to .env.docker and update with your values

# Database - Docker path with volume mount
DATABASE_URL=file:/app/data/dev.db

# Shufti Pro credentials
SHUFTI_CLIENT_ID=your_client_id_here
SHUFTI_SECRET_KEY=your_secret_key_here

# Public webhook URL (must be accessible from internet)
KYC_WEBHOOK_URL=https://your-domain.com/kyc/webhook

# Redirect URL after verification
KYC_REDIRECT_URL=https://your-domain.com/result.html

# Cost-safety: max production runs allowed
MAX_IFRAME_RUNS=10

# Server config
PORT=3000
NODE_ENV=production

# Docker settings
DOCKER_IMAGE=kyc-app:latest
CONTAINER_NAME=kyc-production
