generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id          String       @id @default(cuid())
    email       String?      @unique
    createdAt   DateTime     @default(now())
    kycSessions KycSession[]
}

model KycSession {
    id           String   @id @default(cuid())
    userId       String
    reference    String   @unique
    status       String // pending | accepted | declined | review | expired
    iframeUrl    String
    allowedTypes String // csv: id_card,passport,driving_license,face
    runsCount    Int      @default(0)
    ttlSeconds   Int      @default(300)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    user User @relation(fields: [userId], references: [id])
}

model KycWebhook {
    id             String   @id @default(cuid())
    reference      String
    signatureValid Boolean
    rawPayload     String
    receivedAt     DateTime @default(now())
}
